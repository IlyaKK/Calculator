<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalculatorLineButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CalculationButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">@dimen/calc_button_inset</item>
        <item name="android:insetBottom">@dimen/calc_button_inset</item>
        <item name="android:textSize">@dimen/calc_button_clear_memory_text_size</item>
        <item name="cornerRadius">0dp</item>
        <item name="backgroundTint">@color/black_green</item>
    </style>

    <style name="CalculationButton.Light">
        <item name="backgroundTint">@color/light_green</item>
    </style>

    <style name="CalculationButton.CalculatorMemoryButton">
        <item name="backgroundTint">@color/black_amaranth</item>
    </style>

    <style name="CalculationButton.CalculatorMemoryButton.Light">
        <item name="backgroundTint">@color/light_amaranth</item>
    </style>

    <style name="CalculationButton.NumberButton">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">@dimen/calc_button_number_text_size</item>
        <item name="backgroundTint">@color/black_purple</item>
    </style>

    <style name="CalculationButton.NumberButton.Light">
        <item name="backgroundTint">@color/Light_purple</item>
    </style>

    <style name="CalculationButton.NumberButton.OperationButton">
        <item name="backgroundTint">@color/black_orange</item>
    </style>

    <style name="CalculationButton.NumberButton.OperationButton.Light">
        <item name="backgroundTint">@color/light_orange</item>
    </style>

    <style name="CalculationButton.NumberButton.EqualsButton">
        <item name="backgroundTint">@color/black_green</item>
    </style>

    <style name="CalculationButton.NumberButton.EqualsButton.Light">
        <item name="backgroundTint">@color/light_green</item>
    </style>

    <style name="CalculationTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:padding">@dimen/calc_text_view_padding</item>
    </style>

    <style name="CalculationTextView.HistoryColumn">
        <item name="android:layout_gravity">end</item>
        <item name="android:textSize">@dimen/calc_history_column_text_size</item>
    </style>

    <style name="CalculationTextView.HistoryColumn.Light">
        <item name="android:textColor">@color/black_green</item>
    </style>

    <style name="CalculationTextView.OutputLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/calc_output_line_text_size</item>
        <item name="android:paddingStart">@dimen/calc_output_line_padding</item>
        <item name="android:paddingEnd">@dimen/calc_output_line_padding</item>
        <item name="android:background">@color/black_tint</item>
    </style>
</resources>