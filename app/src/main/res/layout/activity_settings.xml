<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <include layout="@layout/background_image_view" />

    <TextView
        android:id="@+id/text_mode_theme_text_view"
        style="@style/CalculationTextView.ModeDayNight.SettingsTextView"
        android:text="@string/night_mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/change_theme_switch"
        style="@style/SettingsSwitchMaterial"
        app:layout_constraintBottom_toBottomOf="@id/text_mode_theme_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_mode_theme_text_view"
        app:layout_constraintTop_toTopOf="@id/text_mode_theme_text_view" />


</androidx.constraintlayout.widget.ConstraintLayout>